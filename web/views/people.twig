{% extends 'base.twig' %}

{% block title %}People{% endblock %}

{% block content %}
<h3><span class="glyphicon glyphicon-user" aria-hidden="true"></span> People</h3>
<ul class="nav nav-pills">
  <li role="presentation"><a href="/people">View all</a></li>
  <li role="presentation"><a href="/people/add">Add</a></li>
</ul>

<div class="row">
    <div id="result">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Lastname</th>
                    <th>Post</th>
                    <th>Action</th>
                </tr>
            </thead>
        {% for people in people %}
                <tr>
                    <td>{{ people.p_name }}</td>
                    <td>{{ people.p_lastname }}</td>
                    <td>{{ people.p_post }}</td>
                    <td>
                       <form action="/people/delete" method="POST">    
                            <input type="hidden" id="_method" name="_method" value="GET" />                   
                            <a href="/people/{{ people.p_id }}/edit" title="Edit person"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>&nbsp;&nbsp;&nbsp;
                            <input id="textinput" name="p_id" type="text"  hidden="hidden" value="{{ people.p_id }}">
                            <input id="textinput" name="p_name" type="text"  hidden="hidden" value="{{ people.p_name }}">
                            <input id="textinput" name="p_lastname" type="text"  hidden="hidden" value="{{ people.p_lastname }}">
                            <button><a href="/people/delete" title="Delete person"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></button>
                        </form>
                    </td>    
                </tr>            
       {% endfor %}
       </table>       
    </div>              
</div>
{% endblock %}
