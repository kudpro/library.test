{% extends 'base.twig' %}

{% block title %}People{% endblock %}

{% block content %}
<h3><span class="glyphicon glyphicon-user" aria-hidden="true"></span> People</h3>
<ul class="nav nav-pills">
  <li role="presentation"><a href="/people">View all</a></li>
  <li role="presentation"><a href="/people/add">Add</a></li>
</ul>

<div class="row">
    <div class="col-lg-6 col-md-4 " id="result">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Lastname</th>
                    <th>Post</th>
                    <th>Action</th>
                </tr>
            </thead>
        {% for people in people %}
                <tr>
                    <td>{{ people.name }}</td>
                    <td>{{ people.lastname }}</td>
                    <td>{{ people.post }}</td>
                    <td>
                        <a href="/people/edit/{{ people.id }}" title="Edit person"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>&nbsp;&nbsp;&nbsp;
                        <a href="/people/delete/{{ people.id }}" title="Delete person"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>            
       {% endfor %}
       </table>
    </div>              
</div>
{% endblock %}