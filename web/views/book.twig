{% extends 'base.twig' %}

{% block title %}Books{% endblock %}

{% block content %}
<h3><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Books</h3>
<ul class="nav nav-pills">
  <li role="presentation"><a href="/book">View all books</a></li>
  <li role="presentation"><a href="/book/add">Add book</a></li>
</ul>
<div class="row">
    <div id="result">
        <table class="table">
            <thead>
                <tr>
                    <th>Book name</th>
                    <th>Book author</th>
                    <th>Book holder</th>
                    <th>Action</th>
                </tr>
            </thead>
        {% for book in book %}
            <tr>
                <td>{{ book.b_name }}</td>
                <td>{{ book.b_author }}</td>
                <td>
                    {% if book.p_name == NULL %}
                        ---
                    {% endif %}
                    {{ book.p_name }}&nbsp;{{ book.p_lastname }}
                </td>
                <td>
                   <form action="/book/delete" method="POST">    
                            <input type="hidden" id="_method" name="_method" value="GET" /> 
                            <a href="/book/{{ book.b_id }}/change" title="Change holder"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a>&nbsp;&nbsp;&nbsp;                  
                            <a href="/book/{{ book.b_id }}/edit" title="Edit book"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>&nbsp;&nbsp;&nbsp;
                            <input id="textinput" name="b_id" type="text"  hidden="hidden" value="{{ book.b_id }}">
                            <input id="textinput" name="b_name" type="text"  hidden="hidden" value="{{ book.b_name }}">
                            <input id="textinput" name="b_lastname" type="text"  hidden="hidden" value="{{ book.b_author }}">
                            <button><a href="/book/delete" title="Delete person"><span class="glyphicon glyphicon-trash" aria-hidden="true" title="Delete book"></span></a></button>
                        </form>                    
                </td>
            </tr>            
       {% endfor %}
       </table>
    </div>              
</div>
{% endblock %}