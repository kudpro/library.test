{% extends 'base.twig' %}

{% block title %}Books{% endblock %}

{% block content %}
<h3><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Books</h3>
<ul class="nav nav-pills">
  <li role="presentation"><a href="/books">View all</a></li>
  <li role="presentation"><a href="/books/add">Add</a></li>
</ul>
<div class="row">
    <div class="col-lg-7 col-md-6 " id="result">
        <table class="table">
            <thead>
                <tr>
                    <th>Book name</th>
                    <th>Book author</th>
                    <th>Book holder</th>
                    <th>Action</th>
                </tr>
            </thead>
        {% for book in book %}
            <tr>
                <td>{{ book.book_name }}</td>
                <td>{{ book.book_author }}</td>
                <td>
                    {% if book.name == NULL %}
                        Has no owner
                    {% endif %}
                    {{ book.name }}{{ book.lastname }}
                </td>
                <td>
                    <a href="/books/change/{{ book.book_id }}" title="Change holder"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a>&nbsp;&nbsp;&nbsp;
                    <a href="/books/edit/{{ book.book_id }}" title="Edit book"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>&nbsp;&nbsp;&nbsp;
                    <a href="/books/delete/{{ book.book_id }}" title="Delete book"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </td>
            </tr>            
       {% endfor %}
       </table>
    </div>              
</div>
{% endblock %}